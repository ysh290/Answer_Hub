/* Question Section */
.question-section {
  background: #fff;
  margin: 12px;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.question-content {
  margin-bottom: 16px;
}

.question-text {
  color: #111827;
  font-size: 16px;
  line-height: 1.6;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  color: #111827;
  font-weight: 600;
  font-size: 14px;
}

.post-time {
  color: #9ca3af;
  font-size: 12px;
  margin-top: 2px;
}

.tags {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.tag {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  text-align: center;
}

.tag.primary {
  background: #dbeafe;
  color: #1e40af;
}

.tag.secondary {
  background: #e0f2fe;
  color: #0369a1;
}

.question-image {
  width: 100%;
  border-radius: 8px;
  margin-top: 12px;
}

/* Answer Section */
.answer-section {
  background: #fff;
  margin: 12px;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.answer-count {
  color: #6b7280;
  font-size: 14px;
  margin-bottom: 12px;
}

.permission-message {
  color: #111827;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.5;
}

/* Customer Service Card */
.service-card {
  background: #fff;
  margin: 12px;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  text-align: center;
}

.service-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
}

.service-logo {
  width: 32px;
  height: 32px;
  margin-right: 8px;
}

.service-info {
  display: flex;
  flex-direction: column;/*将子元素的排列方向设置为垂直方向（列），即子元素会从上到下排列。*/
  align-items: center;
  /* flex-start; */
}

.service-name {
  color: #111827;
  font-weight: 600;
  font-size: 16px;
  
}

.service-location {
  color: #6b7280;
  font-size: 12px;
  margin-top: 2px;
}

.qr-container {
  margin: 20px 0;
  display: flex;
  justify-content: center;
}

.qr-code {
  width: 200px;
  height: 200px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
}

.qr-instruction {
  color: #6b7280;
  font-size: 14px;
  line-height: 1.5;
}

/* Bottom Action Bar */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #e5e7eb;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 10px;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.action-icon {
  width: 30px;
  height: 30px;
}

.action-count {
  color: #6b7280;
  font-size: 16px;
}

.action-text {
  color: #6b7280;
  font-size: 12px;
}

.comment-btn {
  margin-left: auto;
  background: #f3f4f6;
  color: #6b7280;
  border: none;
  border-radius: 20px;
  padding: 8px 20px;
  font-size: 14px;
}