.page { padding: 12px; background: #f6f7fb; min-height: 100vh; }
.section { background: #fff; border-radius: 12px; padding: 12px; margin-bottom: 12px; }
.label { color: #111827; font-weight: 600; margin-bottom: 8px; }
.picker { padding: 10px; background: #f1f5f9; border-radius: 8px; }
textarea { width: 100%; min-height: 160px; background: #f9fafb; border-radius: 8px; padding: 10px; }
.uploader { width: 100%; height: 140px; background: #f9fafb; border: 1px dashed #d1d5db; border-radius: 8px; display: flex; align-items: center; justify-content: center; }
.uploader image { width: 100%; height: 100%; border-radius: 8px; }
.uploader-placeholder { color: #9ca3af; }
.actions { display: flex; gap: 12px; margin: 12px 0; }
.ai { flex: 1; background: #eef2ff; color: #3730a3; }
.teacher { flex: 1; background: #ecfdf5; color: #065f46; }
.submit { background: linear-gradient(90deg, #10b981, #34d399); color: #fff; }

