<view class="page">
  <view class="section">
    <view class="label">考试类型</view>
    <picker mode="selector" range="{{examTypes}}" value="{{examTypeIndex}}" bindchange="onExamTypeChange">
      <view class="picker">{{examTypes[examTypeIndex]}}</view>
    </picker>
  </view>
  <view class="section">
    <view class="label">科目</view>
    <picker mode="selector" range="{{subjects}}" value="{{subjectIndex}}" bindchange="onSubjectChange">
      <view class="picker">{{subjects[subjectIndex]}}</view>
    </picker>
  </view>
  <view class="section">
    <view class="label">考试阶段</view>
    <picker mode="selector" range="{{stages}}" value="{{stageIndex}}" bindchange="onStageChange">
      <view class="picker">{{stages[stageIndex]}}</view>
    </picker>
  </view>

  <view class="section">
    <view class="label">提问内容</view>
    <textarea placeholder="请输入您的问题，我们会有专业的答疑老师为您解答~" maxlength="210" value="{{content}}" bindinput="onContentInput"/>
  </view>

  <view class="section">
    <view class="label">添加图片</view>
    <view class="uploader" bindtap="chooseImage">
      <image wx:if="{{image}}" src="{{image}}" mode="aspectFill"></image>
      <view wx:else class="uploader-placeholder">点击选择(最多1张)</view>
    </view>
  </view>

  <view class="actions">
    <button class="ai" bindtap="aiAnswer">AI答疑</button>
    <button class="teacher" bindtap="submitQuestion">名师答疑</button>
  </view>
  <button class="submit" bindtap="submitQuestion">提交</button>
</view>

