<view class="container">
  <!-- 表单区域 -->
  <view class="form-container">
    <!-- 页面标题 -->
    <view class="page-title">找回密码</view>
    <view class="page-subtitle">通过手机验证码重置您的密码</view>
    
    <view class="input-group">
      <view class="input-label">手机号</view>
      <input 
        class="input-field" 
        type="number" 
        placeholder="请输入您的手机号码"
        value="{{form.phone}}"
        data-field="phone"
        bindinput="onInput"
      />
    </view>

    <view class="input-group">
      <view class="input-label">验证码</view>
      <view class="code-wrapper">
        <input 
          class="input-field code-input" 
          type="number" 
          placeholder="请输入6位验证码"
          value="{{form.code}}"
          data-field="code"
          bindinput="onInput"
        />
        <button 
          class="code-button {{countdown > 0 ? 'disabled' : ''}}" 
          bindtap="getCode"
          disabled="{{countdown > 0}}"
        >
          {{countdown > 0 ? countdown + 's' : '获取验证码'}}
        </button>
      </view>
    </view>

    <view class="input-group">
      <view class="input-label">新密码</view>
      <input 
        class="input-field" 
        type="password" 
        placeholder="请设置新密码（至少6位）"
        value="{{form.newPassword}}"
        data-field="newPassword"
        bindinput="onInput"
      />
    </view>

    <view class="input-group">
      <view class="input-label">确认密码</view>
      <input 
        class="input-field" 
        type="password" 
        placeholder="请再次输入新密码"
        value="{{form.confirmPassword}}"
        data-field="confirmPassword"
        bindinput="onInput"
      />
    </view>

    <button class="submit-button" bindtap="confirmReset">确定</button>

    <!-- 版本信息 -->
    <view class="version-info">狗蛋答疑宝典</view>
  </view>
</view>

