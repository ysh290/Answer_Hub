<view class="tabs">
  <view class="tab {{tab==='all'?'active':''}}" data-k="all" bindtap="switchTab">全部({{counts.all}})</view>
  <view class="tab {{tab==='pending'?'active':''}}" data-k="pending" bindtap="switchTab">待解答({{counts.pending}})</view>
  <view class="tab {{tab==='resolved'?'active':''}}" data-k="resolved" bindtap="switchTab">已解答({{counts.resolved}})</view>
  <view class="tab {{tab==='adopted'?'active':''}}" data-k="adopted" bindtap="switchTab">已采纳({{counts.adopted}})</view>
  </view>
<scroll-view class="list" scroll-y>
  <block wx:for="{{displayList}}" wx:key="id">
    <view class="item">
      <view class="title">{{item.content}}</view>
      <image wx:if="{{item.image}}" src="{{item.image}}" mode="aspectFill"></image>
      <view class="meta">
        <text>{{item.subject}}</text>
        <text>{{item.stage}}</text>
        <text class="right">{{item.time}}</text>
      </view>
    </view>
  </block>
  <view wx:if="{{!displayList.length}}" class="empty">暂无数据</view>
</scroll-view>

