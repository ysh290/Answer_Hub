.container {
  background: linear-gradient(135deg, #f8fffe 0%, #f0fdf4 100%);
  min-height: 100vh;
  padding: 60px 24px 40px;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(52, 211, 153, 0.03) 100%);
  z-index: 0;
}

.input-group {
  margin-bottom: 40px;
  position: relative;
  z-index: 1;
}

.input-label {
  font-size: 16px;
  font-weight: 700;
  color: #064e3b;
  margin-bottom: 12px;
  letter-spacing: 0.5px;
}

.input-wrapper {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  padding: 4px 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(16, 185, 129, 0.1);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  box-shadow: 0 4px 16px rgba(16, 185, 129, 0.15);
  border-color: rgba(16, 185, 129, 0.3);
  transform: translateY(-1px);
}

.input-field {
  width: 100%;
  height: 48px;
  border: none;
  font-size: 16px;
  color: #111827;
  background: transparent;
  padding: 0;
  outline: none;
  font-weight: 500;
}

.input-field::placeholder {
  color: #9ca3af;
  font-size: 15px;
  font-weight: 400;
}

.button-container {
  margin-top: 80px;
  margin-bottom: 60px;
  position: relative;
  z-index: 1;
}

.confirm-button {
  width: 100%;
  height: 56px;
  background: linear-gradient(135deg, #10b981 0%, #34d399 50%, #6ee7b7 100%);
  color: #ffffff;
  border: none;
  border-radius: 16px;
  font-size: 18px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  letter-spacing: 1px;
}

.confirm-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.confirm-button:active {
  transform: translateY(2px) scale(0.98);
  box-shadow: 0 4px 16px rgba(16, 185, 129, 0.5);
}

.confirm-button:active::before {
  left: 100%;
}

.version-info {
  text-align: center;
  color: #6b7280;
  font-size: 14px;
  margin-top: 40px;
  font-weight: 500;
  letter-spacing: 0.5px;
  position: relative;
  z-index: 1;
}
