.container {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
  padding: 0;
  position: relative;
}

/* 背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  border-radius: 0 0 40px 40px;
  z-index: 0;
}

/* 表单容器 */
.form-container {
  background: #ffffff;
  border-radius: 24px;
  padding: 40px 32px 50px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  margin: 60px 20px 0;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  max-width: calc(100vw - 40px);
}

/* 页面标题 */
.page-title {
  text-align: center;
  font-size: 28px;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8px;
}

.page-subtitle {
  text-align: center;
  font-size: 16px;
  color: #6b7280;
  margin-bottom: 40px;
}

/* 输入组 */
.input-group {
  margin-bottom: 28px;
  position: relative;
}

.input-label {
  font-size: 16px;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
}

.input-label::before {
  content: '';
  width: 4px;
  height: 16px;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  border-radius: 2px;
  margin-right: 8px;
}

.input-field {
  width: 100%;
  height: 56px;
  border: 2px solid #e5e7eb;
  border-radius: 16px;
  font-size: 16px;
  color: #1f2937;
  background: #ffffff;
  padding: 0 20px;
  outline: none;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #10b981;
  box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
  transform: translateY(-1px);
}

.input-field::placeholder {
  color: #9ca3af;
  font-size: 15px;
}

/* 验证码包装器 */
.code-wrapper {
  display: flex;
  align-items: center;
  gap: 16px;
  width: 100%;
  box-sizing: border-box;
}

.code-input {
  flex: 1;
}

.code-button {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  color: #ffffff;
  border: none;
  border-radius: 12px;
  padding: 16px 20px;
  font-size: 14px;
  font-weight: 600;
  min-width: 120px;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  flex-shrink: 0;
}

.code-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.code-button:active::before {
  left: 100%;
}

.code-button.disabled {
  background: #d1d5db;
  color: #9ca3af;
  box-shadow: none;
  transform: none;
}

.code-button:active:not(.disabled) {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.4);
}

/* 提交按钮 */
.submit-button {
  width: 100%;
  height: 60px;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  color: #ffffff;
  border: none;
  border-radius: 16px;
  font-size: 18px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12px 32px rgba(16, 185, 129, 0.4);
  transition: all 0.3s ease;
  margin-top: 50px;
  letter-spacing: 1px;
  position: relative;
  overflow: hidden;
}

.submit-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.submit-button:active::before {
  left: 100%;
}

.submit-button:active {
  transform: translateY(3px) scale(0.98);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
}

/* 版本信息 */
.version-info {
  text-align: center;
  color: #9ca3af;
  font-size: 14px;
  margin-top: 50px;
  padding: 16px;
  background: rgba(249, 250, 251, 0.8);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(229, 231, 235, 0.5);
}
