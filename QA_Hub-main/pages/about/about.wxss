.container {
  background: linear-gradient(135deg, #f8fffe 0%, #f0fdf4 100%);
  min-height: 100vh;
  padding: 40px 24px;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, rgba(52, 211, 153, 0.03) 100%);
  z-index: 0;
}

/* 应用信息 */
.app-info {
  text-align: center;
  margin-bottom: 60px;
  position: relative;
  z-index: 1;
}

.app-icon {
  width: 100px;
  height: 100px;
  background: linear-gradient(135deg, #10b981, #34d399);
  border-radius: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24px;
  box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);
}

.icon-text {
  font-size: 48px;
  font-weight: 700;
  color: #ffffff;
}

.app-name {
  font-size: 28px;
  font-weight: 700;
  color: #064e3b;
  margin-bottom: 8px;
  letter-spacing: 1px;
}

.app-version {
  font-size: 16px;
  color: #10b981;
  font-weight: 600;
  margin-bottom: 16px;
  background: rgba(16, 185, 129, 0.1);
  padding: 4px 12px;
  border-radius: 12px;
  display: inline-block;
}

.app-description {
  font-size: 16px;
  color: #6b7280;
  line-height: 1.6;
  max-width: 280px;
  margin: 0 auto;
}

/* 功能特色 */
.features-section {
  margin-bottom: 60px;
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: 20px;
  font-weight: 700;
  color: #064e3b;
  margin-bottom: 24px;
  text-align: center;
  letter-spacing: 0.5px;
}

.features-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(16, 185, 129, 0.1);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(16, 185, 129, 0.1);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  width: 24px;
  height: 24px;
  background: linear-gradient(135deg, #10b981, #34d399);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 14px;
  font-weight: 700;
  margin-right: 16px;
  flex-shrink: 0;
}

.feature-text {
  font-size: 16px;
  color: #374151;
  font-weight: 500;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 60px;
  position: relative;
  z-index: 1;
}

.action-button {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16px;
  padding: 20px 24px;
  display: flex;
  align-items: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(16, 185, 129, 0.1);
  transition: all 0.3s ease;
}

.action-button:active {
  transform: translateY(1px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
}

.button-icon {
  font-size: 24px;
  margin-right: 16px;
  width: 40px;
  text-align: center;
}

.button-text {
  font-size: 16px;
  color: #374151;
  font-weight: 600;
  flex: 1;
}

/* 版权信息 */
.copyright {
  text-align: center;
  position: relative;
  z-index: 1;
}

.copyright-text {
  display: block;
  font-size: 14px;
  color: #9ca3af;
  margin-bottom: 8px;
  line-height: 1.5;
}

.copyright-text:last-child {
  font-size: 12px;
  color: #d1d5db;
  margin-bottom: 0;
}
