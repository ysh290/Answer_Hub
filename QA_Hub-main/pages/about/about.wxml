<view class="container">
  <!-- 应用信息 -->
  <view class="app-info">
    <view class="app-icon">
      <text class="icon-text">答</text>
    </view>
    <view class="app-name">{{appInfo.name}}</view>
    <view class="app-version">{{appInfo.version}}</view>
    <view class="app-description">{{appInfo.description}}</view>
  </view>

  <!-- 功能特色 -->
  <view class="features-section">
    <view class="section-title">功能特色</view>
    <view class="features-list">
      <view class="feature-item" wx:for="{{appInfo.features}}" wx:key="index">
        <view class="feature-icon">✓</view>
        <text class="feature-text">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <view class="action-button" bindtap="contactService">
      <view class="button-icon">📞</view>
      <text class="button-text">联系客服</text>
    </view>
    <view class="action-button" bindtap="feedback">
      <view class="button-icon">💬</view>
      <text class="button-text">意见反馈</text>
    </view>
    <view class="action-button" bindtap="privacyPolicy">
      <view class="button-icon">🔒</view>
      <text class="button-text">隐私政策</text>
    </view>
  </view>

  <!-- 版权信息 -->
  <view class="copyright">
    <text class="copyright-text">©  答疑宝典 版权所有</text>
    <text class="copyright-text">答疑答疑</text>
  </view>
</view>
