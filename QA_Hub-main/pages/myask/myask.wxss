.tabs { display:flex; overflow:auto; background:#fff; position:sticky; top:0; z-index:1; }
.tab { padding:12px; color:#6b7280; }
.active { color:#10b981; font-weight:600; border-bottom:2px solid #10b981; }
.list { height: calc(100vh - 44px); background:#f6f7fb; }
.item { margin:12px; background:#fff; border-radius:12px; padding:12px; }
.title { color:#111827; margin-bottom:8px; }
.item image { width:100%; height:160px; border-radius:8px; }
.meta { display:flex; color:#6b7280; font-size:12px; margin-top:6px; }
.meta .right { margin-left:auto; }
.empty { text-align:center; color:#9ca3af; padding:40px 0; }

